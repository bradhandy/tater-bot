<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create-service-table" author="bhandy" dbms="h2,postgresql">
        <createTable tableName="service">
            <column name="code" type="varchar(32)">
                <constraints nullable="false" unique="true" />
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="status_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>

            <!-- initial status of this service when adding to a new channel. -->
            <column name="initial_channel_status" type="varchar(10)">
                <constraints nullable="false" />
            </column>
        </createTable>
        
        <createTable tableName="service_history">
            <column name="code" type="varchar(32)">
                <constraints nullable="false"
                        foreignKeyName="sh_service_code_fk" deleteCascade="true"
                        referencedTableName="service" referencedColumnNames="code" />
            </column>
            <column name="description" type="varchar(256)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="initial_channel_status" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="begin_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="end_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
        </createTable>

        <rollback>
            <dropForeignKeyConstraint baseTableName="service_history" constraintName="sh_service_code_fk" />
            <dropTable tableName="service_history" />
            <dropTable tableName="service" />
        </rollback>
    </changeSet>

    <changeSet id="create-channel-service-table" author="bhandy" dbms="h2,postgresql">
        <createTable tableName="channel_service">
            <column name="channel_id" type="varchar(256)">
                <constraints nullable="false" />
            </column>
            <column name="service_code" type="varchar(32)">
                <constraints nullable="false"
                        foreignKeyName="cs_service_code_fk" deleteCascade="true"
                        referencedTableName="service" referencedColumnNames="code" />
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="status_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="varchar(256)" />
        </createTable>

        <createTable tableName="channel_service_history">
            <column name="channel_id" type="varchar(256)">
                <constraints nullable="false" />
            </column>
            <column name="service_code" type="varchar(32)">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="begin_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="end_date" type="timestamp with time zone">
                <constraints nullable="false" />
            </column>
            <column name="user_id" type="varchar(256)" />
        </createTable>
        
        <addForeignKeyConstraint
                baseTableName="channel_service_history" baseColumnNames="channel_id,service_code"
                constraintName="channel_service_fk" deleteCascade="true"
                referencedTableName="channel_service" referencedColumnNames="channel_id,service_code" />

        <rollback>
            <dropForeignKeyConstraint baseTableName="channel_service_history" constraintName="channel_service_fk" />
            <dropTable tableName="channel_service_history" />
            <dropForeignKeyConstraint baseTableName="channel_service" constraintName="cs_service_code_fk" />
            <dropTable tableName="channel_service" />
        </rollback>
    </changeSet>

    <changeSet id="create-record-service" author="bhandy" dbms="h2,postgresql">
        <insert tableName="service">
            <column name="code" type="varchar" value="record" />
            <column name="description" type="varchar" value="Keep a log of channel conversation for a period of time." />
            <column name="status" type="varchar" value="enabled" />
            <column name="status_date" type="timestamp" valueComputed="current_timestamp" />
            <column name="initial_channel_status" type="varchar" value="inactive" />
        </insert>

        <rollback>
            <delete tableName="service">
                <where>code = :value</where>
                <whereParams>
                    <param name="code" value="record" />
                </whereParams>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>